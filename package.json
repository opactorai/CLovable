{
  "name": "cc-lovable",
  "version": "1.0.0",
  "private": true,
  "description": "CC Lovable Development Environment",
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev": "npm run ensure:env && npm run ensure:venv && concurrently --raw \"npm run dev:api\" --prefix \"[WEB] \" \"npm run dev:web\"",
    "dev:api": "node scripts/run-api.js",
    "dev:web": "node scripts/run-web.js",
    "ensure:env": "node scripts/setup-env.js",
    "ensure:venv": "node scripts/setup-venv.js",
    "postinstall": "npm run ensure:env && npm run ensure:venv",
    "setup": "npm install",
    "clean": "node scripts/clean.js",
    "db:reset": "node scripts/reset-db.js",
    "db:backup": "node scripts/backup-db.js",
    "build": "npm run build:web",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd apps/api && pip install -r requirements.txt",
    "start": "npm run start:web",
    "start:web": "cd apps/web && npm run start",
    "start:api": "cd apps/api && python main.py",
    "type-check": "cd apps/web && npm run type-check || true",
    "lint": "cd apps/web && npm run lint || true"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "react-icons": "^5.5.0"
  }
}
